<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 id="update/create">Create a New Tech Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button style="display: block" id="create-btn" type="submit" class="btn btn-primary">Create</button>
        <button style="display: none" id="update-btn" type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        <p id="posttitle" style="display: none;">{{post.title}}</p>
        <p id="postcontent" style="display: none;">{{post.content}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-success" data-id="{{post.id}}" id="update">UPDATE</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}" id="delete">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
